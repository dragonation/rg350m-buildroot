# Architecture
BR2_mipsel=y
BR2_mips_xburst=y

# Target
BR2_TARGET_PLATFORM="anbernic"
BR2_TARGET_DEVICE="rg350m"

# Flags
BR2_MIPS_FP32_MODE_32=y
BR2_MIPS_SOFT_FLOAT=n
BR2_OPTIMIZE_2=y

# Buildroot
BR2_TOOLCHAIN_BUILDROOT_VENDOR="anbernic"
BR2_TOOLCHAIN_BUILDROOT_LARGEFILE=y
BR2_TOOLCHAIN_BUILDROOT_INET_IPV6=y
BR2_TOOLCHAIN_BUILDROOT_WCHAR=y

# Kernel
BR2_KERNEL_HEADERS_3_12=y
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="https://github.com/tonyjih/RG350_linux/archive/b713e4eaaba4.tar.gz"
BR2_LINUX_KERNEL_USE_DEFCONFIG=y
BR2_LINUX_KERNEL_DEFCONFIG="rg350m"
BR2_LINUX_KERNEL_VMLINUZ_BIN=y

# Toolchain: [gcc]
BR2_GCC_VERSION_4_9_X=y
BR2_GCC_ENABLE_LTO=y

# Toolchain: [uclibc]
BR2_UCLIBC_CONFIG="board/rg350m/config/uclibc_defconfig"

# Tool kit: [busybox]
BR2_PACKAGE_BUSYBOX_CONFIG="board/rg350m/config/busybox_defconfig"
BR2_PACKAGE_BUSYBOX_SHOW_OTHERS=y

# Skeleton
BR2_ROOTFS_SKELETON_CUSTOM=y
BR2_ROOTFS_SKELETON_CUSTOM_PATH="board/rg350m/skeleton"
